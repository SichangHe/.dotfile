# focus window
hyper - j : yabai -m window --focus prev; \
          yabai -m window --focus stack.prev
hyper - k : yabai -m window --focus next; \
          yabai -m window --focus stack.next

# focus display
hyper - n : yabai -m display 1 --focus 1
hyper - m : yabai -m display 2 --focus 2

# Moving windows
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east
shift + alt - n : yabai -m window --display 1
shift + alt - m : yabai -m window --display 2

# Move focus container to workspace
shift + alt - p : yabai -m window --space prev; yabai -m space --focus prev
shift + alt - n : yabai -m window --space next; yabai -m space --focus next
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space 8; yabai -m space --focus 8

# fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# layout
hyper - a : yabai -m config --space mouse layout bsp
hyper - s : yabai -m config --space mouse layout stack
hyper - d : yabai -m config --space mouse layout float

# mouse follow
hyper - f : if test (yabai -m config mouse_follows_focus) = "off"; \
                yabai -m config mouse_follows_focus on; \
            else; \
                yabai -m config mouse_follows_focus off; \
            end

# Resize windows
alt - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
alt - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
alt - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
alt - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# Equalize size of windows
hyper - e : yabai -m space --balance

# Rotate windows clockwise and anticlockwise
alt - r         : yabai -m space --rotate 270
shift + alt - r : yabai -m space --rotate 90

# Rotate on X and Y Axis
shift + alt - x : yabai -m space --mirror x-axis
shift + alt - y : yabai -m space --mirror y-axis

# Set insertion point for focused container
shift + lctrl + alt - h : yabai -m window --insert west
shift + lctrl + alt - j : yabai -m window --insert south
shift + lctrl + alt - k : yabai -m window --insert north
shift + lctrl + alt - l : yabai -m window --insert east

# Float / Unfloat window
hyper - space : yabai -m window --toggle float; osascript -e 'display notification "toggle float current window" with title "Yabai"'

# Restart Yabai
hyper - y : brew services restart yabai; osascript -e 'display notification "restart yabai" with title "skhd"'
hyper - u : brew services restart skhd; osascript -e 'display notification "restart skhd" with title "skhd"'
