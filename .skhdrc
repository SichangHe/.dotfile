#alt - h : yabai -m window --resize left:-50:0; \
#                  yabai -m window --resize right:-50:0
#alt - j : yabai -m window --resize bottom:0:50; \
#                  yabai -m window --resize top:0:50
#alt - k : yabai -m window --resize top:0:-50; \
#                  yabai -m window --resize bottom:0:-50
#alt - l : yabai -m window --resize right:50:0; \
#                  yabai -m window --resize left:50:0

# Equalize size of windows
hyper - e : yabai -m space --balance

# Rotate windows clockwise and anticlockwise
hyper - r         : yabai -m space --rotate 270
hyper - t : yabai -m space --rotate 90

# Rotate on X and Y Axis
shift + alt - x : yabai -m space --mirror x-axis
shift + alt - y : yabai -m space --mirror y-axis

# Set insertion point for focused container
#shift + lctrl + alt - h : yabai -m window --insert west
#shift + lctrl + alt - j : yabai -m window --insert south
#shift + lctrl + alt - k : yabai -m window --insert north
#shift + lctrl + alt - l : yabai -m window --insert east

# Float / Unfloat window
hyper - space : yabai -m window --toggle float

# Show desktop index
hyper - i : osascript -e 'display notification "'(yabai -m query --spaces --space mouse | jq '.index')'" with title "desktop"'

# Restart Yabai
hyper - y : brew services restart yabai; osascript -e 'display notification "restart yabai" with title "skhd"'
hyper - u : brew services restart skhd; osascript -e 'display notification "restart skhd" with title "skhd"'
